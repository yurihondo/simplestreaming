{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>whitesource/merge-confidence:beta"
  ],
  "ignorePresets": [":prHourlyLimit2", ":prConcurrentLimit10"],
  "timezone": "Asia/Tokyo",

  // For PRs
  "prHourlyLimit": 0, // 0 means no limit
  "prConcurrentLimit": 5,
  "commitMessagePrefix": "chore: ",
  "pruneBranchAfterAutomerge": true,
  "pruneStaleBranches": true,
  "labels": ["renovate"],
  reviewers: ["yurihondo"],
  "automergeStrategy": "merge-commit",  // This setting does not work for manual merges.

  "packageRules": [
    // Group dependencies
    {
      "matchPackagePrefixes": [
        "androidx.compose.compiler",
        "org.jetbrains.kotlin:"
      ],
      "groupName": "Compose Compiler and Kotlin",
      "groupSlug": "compose_compiler_and_kotlin"
    },

    // Auto marge
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
  ],

  "vulnerabilityAlerts": {
    "enabled": true
  },

  "osvVulnerabilityAlerts": true,

  "major": {
    "stabilityDays": 0
  },
  "minor": {
    "stabilityDays": 0
  },
  "patch": {
    "stabilityDays": 0
  }
}
